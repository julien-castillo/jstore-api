{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Bienvenue sur la page d'accueil</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="row">
                {% for article in articles %}
                    <div class="card m-2 col-md-4" style="width: 18rem;">
                        <p class="date">Ecrit le {{ article.createdAt | date("d/m/Y") }}
                            à {{ article.createdAt | date("H:i") }}</p>
                        <p class="author">Par: {{ article.author }}</p>
                        <img class="card-img-top" src="/assets/blog/images/{{ article.image }}"
                             alt="{{ article.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <a href="{{ path('show', {'id':article.id}) }}" class="btn btn-primary">En savoir plus</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-md-4">
            <h2>Catégories</h2>
            <ul class="list-group">
                {% for category in categories %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ path('show_article', {'id':category.id}) }}">{{ category.title }}
                            <span class="badge bg-primary rounded-pill">{{ category.articles | length }} articles</span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
